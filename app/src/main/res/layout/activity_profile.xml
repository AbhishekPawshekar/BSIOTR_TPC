<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".navigationbar_option_layout.profile">

    <include layout="@layout/toolbar1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/login_page_image" />

                <TextView
                    android:id="@+id/accountholdername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignTop="@+id/profile_pic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/accountholdername"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"

                    android:fontFamily="serif"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/simpleline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignTop="@+id/account_description"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="#BE757171" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/simpleline"
                        android:layout_marginTop="50dp"
                        android:fontFamily="serif"
                        android:textColor="@color/red"
                        android:id="@+id/education_static"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Education:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/education_static"
                    android:text="Edit"
                    android:id="@+id/education_edit"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:id="@+id/education_details"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/education_static"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/education_details"
                    android:layout_marginTop="80dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:id="@+id/technical_static"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Technical Skill:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/technical_static"
                    android:text="Edit"
                    android:id="@+id/technical_edit"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/technical_static"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:id="@+id/technical_details"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/technical_details"
                    android:layout_marginTop="80dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:id="@+id/basic_static"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Basic Info:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/basic_static"
                    android:text="Edit"
                    android:id="@+id/basic_edit"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/basic_static"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:id="@+id/gender_static"
                    android:layout_marginLeft="60dp"
                    android:text="Gender:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/basic_static"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:id="@+id/gender_details"
                    android:textColor="@color/black"
                    android:layout_marginLeft="120dp"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/basic_static"
                    android:layout_marginTop="60dp"
                    android:fontFamily="serif"
                    android:gravity="right"
                    android:textColor="@color/red"
                    android:id="@+id/dob_static"
                    android:layout_marginLeft="60dp"
                    android:text="DOB:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/basic_static"
                    android:layout_marginTop="60dp"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:id="@+id/dob_details"
                    android:layout_marginLeft="120dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/gender_static"
                    android:layout_marginTop="80dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:id="@+id/Hobbies_static"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Hobbies:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/Hobbies_static"
                    android:text="Edit"
                    android:id="@+id/hobbies_edit"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/Hobbies_static"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:id="@+id/hobbies_details"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/hobbies_details"
                    android:layout_marginTop="80dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:id="@+id/contact_static"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Contact Info:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/contact_static"
                    android:text="Edit"
                    android:id="@+id/contact_edit"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/contact_static"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:textColor="@color/red"
                    android:id="@+id/contact_no_static"
                    android:layout_marginLeft="60dp"
                    android:text="Contact No:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/contact_static"
                    android:layout_marginTop="30dp"
                    android:id="@+id/contact_details"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:layout_marginLeft="140dp"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/contact_static"
                    android:layout_marginTop="60dp"
                    android:fontFamily="serif"
                    android:gravity="right"
                    android:textColor="@color/red"
                    android:id="@+id/email_static"
                    android:layout_marginLeft="60dp"
                    android:text="Email:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/contact_static"
                    android:layout_marginTop="60dp"
                    android:fontFamily="serif"
                    android:id="@+id/email_details"
                    android:textColor="@color/black"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="20dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>